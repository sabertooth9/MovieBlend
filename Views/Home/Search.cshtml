@model MovieBlend.Models.ACDarray
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Search";
}

<h1>Search Results</h1>

<div>
    <h4>ACDArray</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.page)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.page)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.total_results)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.total_results)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.total_pages)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.total_pages)
        </dd>
    </dl>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Cover Photo</td>
                <td>Title</td>
                <td>Popularity</td>
                <td>Vote Count</td>
                <td>Vote Avg.</td>
                <td>Release/First Aired</td>
                <td>Language</td>
                <td>WatchList</td>
            </tr>
        </thead>

        @foreach (var item in Model.results)
        {
            <tr>
                <td><img style="width:50px; height:50px;" src=@item.poster_path></td>
                @if (item.isMovie)
                {
                    <td>@item.title</td>
                }
                @if (!item.isMovie)
                {
                    <td>@item.name</td>
                }
                <td>@item.popularity</td>
                <td>@item.vote_count</td>
                <td>@item.vote_average</td>
                @if (!item.isMovie)
                {
                    <td>@item.first_air_date</td>
                }
                @if (item.isMovie)
                {
                    <td>@item.release_date</td>
                }
                <td>@item.original_language</td>
                <td>
                    @if (item.isAdded)
                    {
                        <input class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("DeleteWatch", "Home", new { @data = JsonConvert.SerializeObject(item.id) })'" />
                    }
                    @if (!item.isAdded)
                    {
                        <input class="btn btn-success" value="Add" onclick="location.href='@Url.Action("AddWatch", "Home", new { @data = JsonConvert.SerializeObject(item.id) })'" />
                    }
                </td>
            </tr>
        }
    </table>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
