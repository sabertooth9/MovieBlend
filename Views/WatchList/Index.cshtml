@model List<ApiCommonData>
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Your WatchList";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<h1>WatchList</h1>

<div>

    @foreach (var item in Model)
    {
        <div class="media position-relative">
            <img src=@item.poster_path class="mr-4 card-img" style="width:150px; height:180px;">

            <div class="media-body">
                <h5 class="mt-0">@item.title@item.name | @item.original_language</h5>
                <button class="btn btn-danger" value="Delete" onclick="location.href='@Url.Action("DeleteWatch", "WatchList", new { @data = JsonConvert.SerializeObject(item.id) })'"><i class="fa fa-fw fa-minus-circle"></i>Remove</button>
                <hr />
                <h6 class="mt-3">Release: @item.release_date@item.first_air_date</h6>
                <h6 class="mt-3">Vote Count: @item.vote_count | Vote_avg: @item.vote_average</h6>
                <p>@item.overview</p>
            </div>
        </div>
        <br />
    }
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
